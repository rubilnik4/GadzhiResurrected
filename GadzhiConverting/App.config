<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!--Информация о принтерах-->
    <section name="PrintersInformationSection" type="GadzhiConverting.Configuration.RegisterPrintersInformationSection, GadzhiConverting" />

    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />

    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="GadzhiConverting.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>

  <!--Точка входа для подключния к WCF сервису-->
  <system.serviceModel>
    <bindings>
      <wsDualHttpBinding>
        <binding name="FileConvertingBinding" maxBufferPoolSize="100000000" maxReceivedMessageSize="100000000" openTimeout="00:00:30" closeTimeout="00:00:30" sendTimeout="00:00:30" receiveTimeout="00:00:30">
          <readerQuotas maxDepth="100000000" maxStringContentLength="100000000" maxArrayLength="100000000" maxBytesPerRead="100000000" maxNameTableCharCount="100000000" />
        </binding>
      </wsDualHttpBinding>
    </bindings>

    <client>
      <endpoint name="FileConvertingServerService" address="http://localhost:52849/Services/FileConvertingServerService.svc" binding="wsDualHttpBinding" bindingConfiguration="FileConvertingBinding" contract="GadzhiDTOServer.Contracts.FilesConvert.IFileConvertingServerService" />
    </client>
  </system.serviceModel>

  <entityFramework>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
  </entityFramework>

  <!--Информация о принтерах-->
  <PrintersInformationSection>
    <PrintersPdfCollection>
      <PrinterInformationElement Name="PDFCreator" PrefixSearchPaperSize="GTNG" />
    </PrintersPdfCollection>
  </PrintersInformationSection>
  <userSettings>
    <GadzhiConverting.Properties.Settings>
      <setting name="UnusedDataCheck" serializeAs="String">
        <value>00:00:00</value>
      </setting>
      <setting name="ConvertingDataFolderCheck" serializeAs="String">
        <value>00:00:00</value>
      </setting>
    </GadzhiConverting.Properties.Settings>
  </userSettings>
</configuration>
