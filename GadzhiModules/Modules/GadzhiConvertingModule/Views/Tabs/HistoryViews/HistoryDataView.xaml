<UserControl x:Class="GadzhiModules.Modules.GadzhiConvertingModule.Views.Tabs.HistoryViews.HistoryDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:GadzhiModules.Helpers.Wpf.Converters"
             xmlns:viewModels="clr-namespace:GadzhiModules.Modules.GadzhiConvertingModule.ViewModels.Tabs.HistoryViewModels"
             xmlns:historyViews="clr-namespace:GadzhiModules.Modules.GadzhiConvertingModule.Views.Tabs.HistoryViews.HistoryDataItems"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:HistoryDataViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/GadzhiModules;component/Modules/GadzhiConvertingModule/Views/Resources/GadzhiResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <converters:BoolToVisibilityConverter x:Key="VisibilityConverterHidden"
                                                  TrueValue="Visible" 
                                                  FalseValue="Hidden"/>
            <converters:BoolToVisibilityConverter x:Key="VisibilityConverterCollapsed"
                                                  TrueValue="Visible" 
                                                  FalseValue="Collapsed"/>
        </Grid.Resources>

        <Border Margin="10 0 10 5"
                BorderBrush="{DynamicResource PrimaryHueMidBrush}" 
                BorderThickness="1" 
                Padding="1">
            <Grid>
                <Grid Visibility="{Binding IsPackageMode, Converter={StaticResource VisibilityConverterCollapsed}}">
                    <historyViews:HistoryDataPartView DataContext="{Binding HistoryDataViewModelPart}"/>
                </Grid>

                <Grid Visibility="{Binding IsFileMode, Converter={StaticResource VisibilityConverterCollapsed}}">
                    <historyViews:HistoryFileDataPartView DataContext="{Binding HistoryFileDataViewModelPart}"/>
                </Grid>
            </Grid>
        </Border>

        <ProgressBar Style="{StaticResource PreLoadingProgressData}"
                     Visibility="{Binding IsLoading, Converter={StaticResource VisibilityConverterHidden}}"/>
    </Grid>
</UserControl>
