<UserControl x:Class="GadzhiModules.Modules.GadzhiConvertingModule.Views.Tabs.ServerViews.ServerInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:serverViewModels="clr-namespace:GadzhiModules.Modules.GadzhiConvertingModule.ViewModels.Tabs.ServerViewModels"
             xmlns:converters="clr-namespace:GadzhiModules.Helpers.Wpf.Converters"
             d:DataContext="{d:DesignInstance Type=serverViewModels:ServerInfoViewModel, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/GadzhiModules;component/Modules/GadzhiConvertingModule/Views/Resources/GadzhiResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <converters:BoolToVisibilityConverter x:Key="VisibilityConverter"
                                                  TrueValue="Visible" 
                                                  FalseValue="Hidden"/>
        </Grid.Resources>

        <GroupBox Grid.Row="0"
                  Header="Серверы"
                  Style="{StaticResource GroupBoxGadzhi}">
            <Grid>
                <Grid Visibility="{Binding ServersInfo.OkStatus, Converter={StaticResource VisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                           Grid.Column="0" 
                           Style="{StaticResource TextBlockDescription}"
                           Text="Всего серверов:"/>
                    <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           Style="{StaticResource TextBlockCommon}"
                           Text="{Binding ServersCount}"/>

                    <TextBlock Grid.Row="1"
                           Grid.Column="0" 
                           Style="{StaticResource TextBlockDescription}"
                           Text="Пакетов в очереди:"/>
                    <TextBlock Grid.Row="1"
                           Grid.Column="1" 
                           Style="{StaticResource TextBlockCommon}"
                           Text="{Binding QueuePackages}"/>

                    <TextBlock Grid.Row="2"
                           Grid.Column="0" 
                           Style="{StaticResource TextBlockDescription}"
                           Text="Пакетов обработано:"/>
                    <TextBlock Grid.Row="2"
                           Grid.Column="1" 
                           Style="{StaticResource TextBlockCommon}"
                           Text="{Binding CompletePackages}"/>

                    <TextBlock Grid.Row="3"
                           Grid.Column="0" 
                           Style="{StaticResource TextBlockDescription}"
                           Text="Файлов в очереди:"/>
                    <TextBlock Grid.Row="3"
                           Grid.Column="1" 
                           Style="{StaticResource TextBlockCommon}"
                           Text="{Binding QueueFiles}"/>

                    <TextBlock Grid.Row="4"
                           Grid.Column="0" 
                           Style="{StaticResource TextBlockDescription}"
                           Text="Файлов обработано:"/>
                    <TextBlock Grid.Row="4"
                           Grid.Column="1" 
                           Style="{StaticResource TextBlockCommon}"
                           Text="{Binding CompleteFiles}"/>
                </Grid>

                <ProgressBar Style="{StaticResource PreLoadingProgressData}"
                             Visibility="{Binding ServersInfo.HasErrors, Converter={StaticResource VisibilityConverter}}"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
