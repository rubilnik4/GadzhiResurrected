<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <startup useLegacyV2RuntimeActivationPolicy="true">
    <supportedRuntime version="v4.0" />
  </startup>
  <system.web>
    <compilation debug="true" targetFramework="4.8" />
    <httpRuntime targetFramework="4.7.2" />
  </system.web>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
        <behavior name="FileConvertingServiceBehavior">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceThrottling maxConcurrentCalls="10" maxConcurrentSessions="10" maxConcurrentInstances="10" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <protocolMapping>
      <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />

    <!--https://stackoverflow.com/questions/464707/maximum-array-length-quota-->
    <bindings>
      <wsDualHttpBinding>
        <binding name="FileConvertingBinding" maxBufferPoolSize="100000000" maxReceivedMessageSize="100000000" openTimeout="00:03:00" closeTimeout="00:10:00" sendTimeout="00:03:00" receiveTimeout="00:03:30">
          <readerQuotas maxDepth="100000000" maxStringContentLength="100000000" maxArrayLength="100000000" maxBytesPerRead="100000000" maxNameTableCharCount="100000000" />
          <reliableSession ordered="false" inactivityTimeout="00:03:00" />
        </binding>
      </wsDualHttpBinding>
    </bindings>
    <services>
      <service behaviorConfiguration="FileConvertingServiceBehavior" name="GadzhiWcfHost.Services.FileConvertingClientService">
        <endpoint binding="wsDualHttpBinding" bindingConfiguration="FileConvertingBinding" contract="GadzhiDTOClient.Contracts.FilesConvert.IFileConvertingClientService" />
      </service>
      <service behaviorConfiguration="FileConvertingServiceBehavior" name="GadzhiWcfHost.Services.FileConvertingServerService">
        <endpoint binding="wsDualHttpBinding" bindingConfiguration="FileConvertingBinding" contract="GadzhiDTOServer.Contracts.FilesConvert.IFileConvertingServerService" />
      </service>
    </services>
    <client>
      <endpoint name="FileConvertingClientService" address="http://localhost:52849/Services/FileConvertingClientService.svc" binding="basicHttpBinding" bindingConfiguration="FileConvertingBinding" contract="GadzhiDTOClient.Contracts.FilesConvert.IFileConvertingClientService" />
      <endpoint name="FileConvertingServerService" address="http://localhost:52849/Services/FileConvertingServerService.svc" binding="basicHttpBinding" bindingConfiguration="FileConvertingBinding" contract="GadzhiDTOServer.Contracts.FilesConvert.IFileConvertingServerService" />
    </client>
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
    <directoryBrowse enabled="true" />
  </system.webServer>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
